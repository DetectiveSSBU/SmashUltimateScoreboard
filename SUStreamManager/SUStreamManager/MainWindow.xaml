<Window x:Class="SUStreamManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SUStreamManager"
        mc:Ignorable="d"
        Title="Smash Ultimate Scoreboard v.3.0 by @DetectiveSSBU" MinHeight="200" MinWidth="650" Height="200" Width="650" Closing="Window_Closing">

    
       

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        
        <TextBlock Name="tbScore1" FontWeight="Bold" FontSize="24" HorizontalAlignment="Right" Grid.Row="1" Grid.Column="1" Margin="0,0,25,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Center"/>
        <Button Name="btnP1Up" Content="▲" Grid.Column="1" HorizontalAlignment="Right" Grid.Row="1" Margin="0,-20,0,0" VerticalAlignment="Center" Width="20" Click="btnP1Up_Click"/>
        <Button Name="btnP1Down" Content="▼" Grid.Column="1" HorizontalAlignment="Right" Grid.Row="1" Margin="0,20,0,0" VerticalAlignment="Center" Width="20" Click="btnP1Down_Click"/>
        <ComboBox Name="cbPlayerName1" HorizontalAlignment="Left" Grid.ColumnSpan="2" Margin="10,15,0,0" Grid.Row="1" VerticalAlignment="Center" Width="200" SelectionChanged="cbPlayerName1_SelectionChanged" />
        <ComboBox Name="cbPlayerTeam1" Visibility="Collapsed" HorizontalAlignment="Left" Grid.ColumnSpan="2" Margin="110,15,0,0" Grid.Row="1" VerticalAlignment="Center" Width="100" SelectionChanged="cbPlayerName1_SelectionChanged" />
        <Label Name="lblSide1" Content="Player 1" HorizontalAlignment="Center" Margin="0,0,50,0" Grid.Row="1" VerticalAlignment="Top"/>
        <CheckBox Name="chkPlayer1Loser" IsEnabled="False" Content="[L]" Grid.Column="1" HorizontalAlignment="Left" Margin="10,5,0,0" Grid.Row="1" VerticalAlignment="Top"/>

        <ComboBox Name="cbPlayer1Character" Grid.Column="1" HorizontalAlignment="Left" Margin="0,0,0,0" Grid.Row="2" VerticalAlignment="Center" Width="90" SelectionChanged="cbPlayer1Character_SelectionChanged"/>
        <ComboBox Name="cbPlayer1Icon" Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,5,0" Grid.Row="2" VerticalAlignment="Center" Height="40" Width="60" SelectionChanged="cbPlayer1Icon_SelectionChanged"/>


        <ComboBox Name="cbBracket" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="10,15,0,0" VerticalAlignment="Center" Width="160" SelectionChanged="cbBracket_SelectionChanged"/>
        <Label Content="Bracket Type" VerticalAlignment="Top" Margin="25,0,0,0"></Label>


        <TextBlock Name="tbScore2" FontWeight="Bold" FontSize="24" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="2" Margin="25,0,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Center"/>
        <Button Name="btnPlayer2Up" Content="▲" Grid.Column="2" HorizontalAlignment="Left" Grid.Row="1" Margin="0,-20,0,0" VerticalAlignment="Center" Width="20" Click="btnPlayer2Up_Click"/>
        <Button Name="btnPlayer2Down" Content="▼" Grid.Column="2" HorizontalAlignment="Left" Grid.Row="1" Margin="0,20,0,0" VerticalAlignment="Center" Width="20" Click="btnPlayer2Down_Click"/>
        <ComboBox Name="cbPlayerName2" HorizontalAlignment="Right"  Margin="0,15,10,0" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" Grid.ColumnSpan="2" Width="200" SelectionChanged="cbPlayerName2_SelectionChanged"/>
        <ComboBox Name="cbPlayerTeam2" Visibility="Collapsed" HorizontalAlignment="Right"  Margin="0,15,110,0" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" Grid.ColumnSpan="2" Width="100" SelectionChanged="cbPlayerName2_SelectionChanged"/>
        <Label Name="lblSide2" Content="Player 2" HorizontalAlignment="Center" Margin="50,0,0,0" Grid.Row="1" Grid.Column="3" VerticalAlignment="Top"/>
        <CheckBox Name="chkPlayerLoser2" IsEnabled="False" Content="[L]" Grid.Column="2" HorizontalAlignment="Right" Margin="0,5,10,0" Grid.Row="1" VerticalAlignment="Top"/>

        <ComboBox Name="cbPlayer2Character" Grid.Column="2" HorizontalAlignment="Right" Margin="0,0,0,0" Grid.Row="2" VerticalAlignment="Center" Width="90" SelectionChanged="cbPlayer2Character_SelectionChanged"/>
        <ComboBox Name="cbPlayer2Icon" Grid.Column="2" HorizontalAlignment="Left" Margin="5,0,0,0" Grid.Row="2" VerticalAlignment="Center" Height="40" Width="60" SelectionChanged="cbPlayer2Icon_SelectionChanged"/>

        <ComboBox Name="cbRound" Grid.ColumnSpan="2" Grid.Column="2" HorizontalAlignment="Right" Margin="0,15,40,0" VerticalAlignment="Center" Width="160" SelectionChanged="cbRound_SelectionChanged"/>
        <Label Content="Round" Grid.Column="3" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,45,0"></Label>
        <TextBox Name="tbRoundNum" Grid.Column="3" HorizontalAlignment="Right" Height="23" Margin="0,15,5,0" TextWrapping="Wrap" Text="1" HorizontalContentAlignment="Center" VerticalAlignment="Center" Width="30"/>



        <Button Name="btnAdd" Content="Add"  HorizontalAlignment="Left" Margin="20,10,0,0" Grid.Row="2" VerticalAlignment="Center" Width="55" Click="btnAdd_Click"/>
        <Button Name="btnRemove" Content="Remove"  HorizontalAlignment="Right" Margin="0,10,20,0" Grid.Row="2" VerticalAlignment="Center" Width="55" Click="btnRemove_Click"/>
        <Label Content="Players:" HorizontalAlignment="Center" Margin="0,0,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <Button Name="btnUpdate" Content="Update" Grid.Column="3" HorizontalAlignment="Center" Margin="0,0,65,0" Grid.Row="2" VerticalAlignment="Center" Height="40" Width="60" Click="btnUpdate_Click"/>

        <Button Name="btnSwap" Grid.ColumnSpan="2" Content="Swap Players" Grid.Column="1" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Height="40" Width="75" Click="btnSwap_Click"/>
        <Button Name="btnOutput" Content="Output" Grid.Column="3" HorizontalAlignment="Center" Margin="65,0,0,0" Grid.Row="2" VerticalAlignment="Center" Height="40" Width="60" Click="btnOutput_Click"/>


    </Grid>
    
</Window>
